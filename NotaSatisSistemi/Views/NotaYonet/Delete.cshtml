@model NotaSatisSistemi.Models.Tbl_Notalar
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section secBaslik{
    <h3 class="head-h3">Nota Sil</h3>
}
<div style="color:#000 !important; width:100%;">
    <h3 class="head-h3">Bu notayı silmek istiyor musun?</h3>
    <hr />
    <table class="table" border="1" cellpadding="5" cellspacing="0" width="100%">
        <tr>
            <td rowspan="8">
                @{
                    var dir = "~/NotaImages/" + Model.NotaID + ".jpg";
                    <a href="@Url.Content(dir)" target="_blank" title="Notayı Tam Ekranda Görmek İçin Tıklayın"><img src="@Url.Content(dir)" width="475" /></a>
                }
            </td>
        </tr>
        <tr>
            <td width="10%">Eser</td>
            <td>@Html.DisplayFor(model => model.NotaAd)</td>
        </tr>
        <tr>
            <td>Eser Sahibi</td>
            <td>@Html.DisplayFor(model => model.EserSahibi)</td>
        </tr>
        <tr>
            <td>Notalayan</td>
            <td>@Html.DisplayFor(model => model.Notalayan)</td>
        </tr>
        <tr>
            <td>Detaylar</td>
            <td>@Html.DisplayFor(model => model.NotaDetay)</td>
        </tr>
        <tr>
            <td>Enstruman</td>
            <td>@Html.DisplayFor(model => model.Enstruman)</td>
        </tr>
        <tr>
            <td>Kredi</td>
            <td>@Html.DisplayFor(model => model.Kredi)</td>
        </tr>
        <tr>
            <td class="text-center" style=" vertical-align: middle; float: none; " colspan="2">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color" style="padding: 5px 5px 5px 5px;">
                        <input type="submit" value="Sil" class="aBtn" style="margin:2px;" />
                        @Html.ActionLink("Nota Listesi", "Index", null, new { @class = "aBtn" })
                    </div>
                }
            </td>
        </tr>
    </table>
</div>